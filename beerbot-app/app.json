{
  "expo": {
    "name": "BeerBot",
    "slug": "beerbot",
    "version": "1.0.0",
    "scheme": "beerbot",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.beerbot.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "BeerBot uses your location to find nearby venues.",
        "NSCameraUsageDescription": "BeerBot uses your camera for age verification.",
        "NSFaceIDUsageDescription": "BeerBot uses Face ID for quick and secure login."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.beerbot.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "BeerBot uses your location to find nearby venues."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#f59e0b"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "BeerBot uses Face ID for quick and secure login."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
